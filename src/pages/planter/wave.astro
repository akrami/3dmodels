---
import "../../styles/globals.css";
import ModelLayout from "@/layouts/modelLayout";
import { WavePlanterMesh, DEFAULT_PROPS, MODEL_NAME } from "@/models/waveplanter";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wave Planter</title>
  </head>
  <body>
    <ModelLayout
      client:load
      name={MODEL_NAME}
      defaultValues={DEFAULT_PROPS}
      camera={[0, -400, 300]}
      orbitDistance={500}
    >
      <WavePlanterMesh />
    </ModelLayout>
  </body>
</html>
